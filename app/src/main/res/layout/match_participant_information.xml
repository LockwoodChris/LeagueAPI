<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <ImageView
        android:layout_width="128px"
        android:layout_height="128px"
        android:src="@drawable/item_placeholder"
        android:id="@+id/match_info_champ_icon"/>
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:id="@+id/match_info_name"/>
    <ImageView
        android:layout_width="64px"
        android:layout_height="64px"
        android:src="@drawable/item_placeholder"
        android:id="@+id/match_info_item0"/>
    <ImageView
        android:layout_width="64px"
        android:layout_height="64px"
        android:src="@drawable/item_placeholder"
        android:id="@+id/match_info_item1"/>
    <ImageView
        android:layout_width="64px"
        android:layout_height="64px"
        android:src="@drawable/item_placeholder"
        android:id="@+id/match_info_item2"/>
    <ImageView
        android:layout_width="64px"
        android:layout_height="64px"
        android:src="@drawable/item_placeholder"
        android:id="@+id/match_info_item3"/>
    <ImageView
        android:layout_width="64px"
        android:layout_height="64px"
        android:src="@drawable/item_placeholder"
        android:id="@+id/match_info_item4"/>
    <ImageView
        android:layout_width="64px"
        android:layout_height="64px"
        android:src="@drawable/item_placeholder"
        android:id="@+id/match_info_item5"/>
    <ImageView
        android:layout_width="64px"
        android:layout_height="64px"
        android:src="@drawable/item_placeholder"
        android:id="@+id/match_info_item6"/>
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:id="@+id/match_info_minions"/>
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:id="@+id/match_info_kda"/>
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:id="@+id/match_info_damage"/>
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:id="@+id/match_info_gold"/>
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:id="@+id/match_info_wards"/>
</LinearLayout>