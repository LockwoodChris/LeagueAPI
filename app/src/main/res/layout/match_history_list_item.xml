<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/matchImage"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/match_image"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/matchSummonerName"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@id/matchImage"
        android:layout_toEndOf="@id/matchImage" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/matchSummonerTitle"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@id/matchSummonerName"
        android:layout_toEndOf="@id/matchSummonerName" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/matchSummonerScore"
        android:layout_alignBottom="@+id/matchImage"
        android:layout_toRightOf="@+id/matchImage"
        android:layout_toEndOf="@+id/matchImage" />

</RelativeLayout>